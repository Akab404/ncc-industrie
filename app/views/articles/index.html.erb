<div class="container">
  <h1>Articles list</h1>

    <div class="card-article">
      <div class="titre-article">
        <% @articles.each do |article| %>
          <%= link_to article_path(article), class: "card-article-link" do %>
            <div class="card-article-content">
              <p><%= cl_image_tag article.cover_image.key if article.cover_image.attached? %></p>
              <p><%= article.titre %></p>
              <p><%= article.publication_date  %></p>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>

    <% if user_signed_in? %>
      <%= link_to new_article_path, class:"ncc-cta" do%>
        Ajouter un nouvel article <span class="right-arrow"><i class="fa-solid fa-angle-right"></i></span>
      <% end%>
    <% end%>
</div>
