  <%= cl_image_tag @article.cover_image.key, class:"w-100" if @article.cover_image.attached?%>

<div class="container">

  <h1><%= @article.titre %></h1>

  <p><%= @article.publication_date %></p>

  <p><%= @article.category %></p>

  <p><%= @article.content %></p>

  <p><% @article.photos.each do |photo| %>
    <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
  <%end %>
  </p>

  <% if user_signed_in? %>
    <%= link_to "Modifier cet article", edit_article_path(@article)%>
  <% end %>

  <%= link_to "Supprimer cet article", @article, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} if user_signed_in?%>

</div>
